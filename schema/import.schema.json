{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "jeux": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "titre": {
                "type": "string"
              },
              "editeur": {
                "type": "string"
              },
              "auteur": {
                "type": "string"
              },
              "annee": {
                "type": "string"
              }
            },
            "required": [
              "nom",
              "editeur",
              "auteur",
              "annee"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "jeux"
  ]
}
